/* pages/search_result_d/search_result_d.wxss */
.search-result {
  min-height: 100vh;
  background: #f4f4f4;
}

.search-result-search{
  padding: 22rpx 114rpx;
  background: #0064A0;
}
.search-result-search-box {
  height: 56rpx;
  background: #fff;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
}
.search-result-search-box-icon {
  width: 26rpx;
  height: 26rpx;
  margin-left: 12rpx;
  margin-right: 14rpx;
}
.search-result-search-box input {
  font-size: 26rpx;
  color: #333; 
}
.search-result-search-box-delete {
  width: 26rpx;
  height: 26rpx;
  margin-left: auto;
  margin-right: 20rpx;
}
.search-result-bottom {
  height: 60rpx;
  color: #999;
  font-size: 22rpx;
  line-height: 60rpx;
  text-align: center;
}

.doctor-list {

}
.dotor-item {
  display: flex;
  background: #fff;
  padding: 40rpx 30rpx;
  border-bottom: 2rpx solid #f4f4f4;
}
.doctor-item-avatar {
  margin-right: 32rpx;
}
.doctor-item-avatar image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.doctor-item-message {
  width: 80%;
}
.doctor-item-message-main {
  display: flex;
  align-items: baseline;
}
.doctor-item-message-main-name {
  color: #333;
  font-size: 30rpx;
  font-weight: bold;
  max-width: 120rpx;
  overflow: hidden;
}
.doctor-item-message-main-ex{
  font-size: 22rpx;
  color: #333;
  margin-left: 16rpx;
  max-width: 380rpx;
  overflow: hidden;
  white-space: nowrap;
}
.doctor-item-message-main-status {
  background: #0D820A;
  color: #fff;
  border-radius: 5rpx;
  width: 60rpx;
  height: 30rpx;
  line-height: 30rpx;
  font-size: 18rpx;
  text-align: center;
  margin-left: 10rpx;
}
.doctor-item-message-main-word {
  overflow-x: scroll;
  width: 200rpx;
  margin-left: auto;
  white-space: nowrap;
}
.doctor-item-message-main-word-item {
  padding: 0 22rpx;
  background: #f4f4f4;
  height: 46rpx;
  line-height: 46rpx;
  color: #999;
  font-size: 22rpx;
  border-radius: 23rpx;
  margin-right: 16rpx;
}
.doctor-item-introduction {
  font-size: 24rpx;
  color: #666;
  margin-top: 17rpx;
}
.doctor-item-introduction text{
  margin: 0
}
.doctor-list-none {
  display: flex;
  padding-top: 280rpx;
}
.doctor-list-none image{
  width: 284rpx;
  height: 319rpx;
  margin-left: auto;
  margin-right: auto;
}