/* pages/sciene/sciene.wxss */
@import "../../wxParse/wxParse.wxss";
.sciene-page {
  min-height: 100vh;
  background: #f4f4f4;
}

.sciene-search {
  display: flex;
  align-items: center;
  height: 110rpx;
  background: #0064A0;
  width: 100%;
}
.sciene-search-box {
  display: flex;
  align-items: center;
  height: 56rpx;
  width: 520rpx;
  background: #fff;
  margin-left: auto;
  margin-right: auto;
  border-radius: 10rpx;
}
.sciene-search-box image {
  width: 26rpx;
  height: 26rpx;
  margin-left: auto;
  margin-right: 14rpx;
}
.sciene-search-box input {
  font-size: 26rpx;
  width: 220rpx;
  margin-right: auto;
}
.sciene-search-ask {
  width: 130rpx;
  height: 56rpx;
  line-height: 56rpx;
  border: 2rpx solid #fff;
  border-radius: 10rpx;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
}
.sciene-search-word {
  background: #fff;
  border-bottom: 12rpx solid #f4f4f4;
  padding-left: 38rpx;
  padding-top: 8rpx; 
}
.sciene-show-more {
  font-size: 24rpx;
  color: #333;
  text-align: center;
  height: 54rpx;
  line-height: 54rpx;
  position: relative;
  right: 38rpx;
}
.sciene-search-word-item {
  border: 2rpx solid #f4f4f4;
  font-size: 26rpx;
  color: #333;
  display: inline-block;
  padding: 17rpx 20rpx;
  border-radius: 10rpx;
  margin-right: 32rpx;
  margin-top: 36rpx;
}
.sciene-search-word-item-on {
  background: #0064A0;
  color: #fff;
}
.texture-list-last {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background: #f4f4f4;
  font-size: 22rpx;
  color: #999;
}